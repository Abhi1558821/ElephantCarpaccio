<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_total_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:padding="@dimen/dp_8"
            android:text="@string/total_without_discount"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/textview_total_value"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_total_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_total_lable"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:padding="@dimen/dp_8"
            android:text="@string/discount"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/textview_discount_value"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_total_value" />

        <TextView
            android:id="@+id/textview_discount_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_discount"
            app:layout_constraintTop_toBottomOf="@+id/textview_total_value" />

        <TextView
            android:id="@+id/textview_tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:padding="@dimen/dp_8"
            android:text="@string/tax"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/textview_discount_value"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_discount" />

        <TextView
            android:id="@+id/textview_tax_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_discount"
            app:layout_constraintTop_toBottomOf="@+id/textview_discount_value" />

        <TextView
            android:id="@+id/textview_total_payable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:padding="@dimen/dp_8"
            android:text="@string/total_price"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/textview_discount_value"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_tax" />

        <TextView
            android:id="@+id/textview_total_payable_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_discount"
            app:layout_constraintTop_toBottomOf="@+id/textview_tax_value" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>